<div>
    <table>
        <tbody>
            <tr>
                <td style="vertical-align: top;">
                    <div class="chatContactList">
                        {{~it.contacts :contact}}
                            {{#def.chatContact}}
                        {{~}}
                    </div>
                </td>
                <td>
                    <div class="chatHistory {{=it.deviceType}}" name="history"></div>
                    <div>
                        <input type="text" class="chatInput" name="message" disabled="true"
                               onkeypress="if (13 != event.keyCode) return; lord.sendChatMessage(); return false;"
                               placeholder="{{=it.tr.chatMessageTextPlaceholder}}" />
                    </div>
                    <div>
                        <button name="sendMessageButton" onclick="lord.sendChatMessage();" disabled="true"
                                class="button chatSendButton">{{=it.tr.sendChatMessageButtonText}}</button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
