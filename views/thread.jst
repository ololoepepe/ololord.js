<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
{{#def.head}}
<body class="{{=it.deviceType}}" {{#def.baseData}}>
{{? it.settings.mode.name != "ascetic"}}
    <div id="hiddenPostForm" style="display: none;">
        {{#def.postForm}}
    </div>
    {{? it.settings.captchaEnabled}}
        <div id="hiddenCaptcha" style="display: none;">
            {{? it.user.captchaQuota > 0}}
                {{=it.settings.captchaEngine.widgetHtml}}
            {{?}}
        </div>
    {{?}}
{{?}}
{{? it.customHeader}}
    {{#def.customheader}}
{{?}}
{{~["top", "bottom"] :target}}
    {{#def.navigationButton}}
{{~}}
{{? it.settings.mode.name != "ascetic"}}
    {{~["previous", "next"] :target}}
        {{#def.leafButton}}
    {{~}}
{{?}}
<a id="top"></a>
{{#def.toolbar}}
<br />
{{#def.navbar}}
<br />
{{#def.searchAction}}
{{? it.board.bannerFileName}}
    <br />
    {{#def.banner}}
{{?}}
{{? it.thread.postingEnabled}}
    <hr />
    {{~["Top"] :position}}
        {{#def.createAction}}
    {{~}}
{{??}}
    <div class="postingDisabledMessage">
        <h2>{{=it.tr.postingDisabledThreadText}}</h2>
    </div>
{{?}}
{{~[it.thread] :thread}}
    {{~[thread.opPost] :post}}
        {{#def.post}}
    {{~}}
    {{~thread.posts :post}}
        {{#def.post}}
    {{~}}
{{~}}
{{? it.settings.mode.name != "ascetic" && it.board.postingEnabled}}
    <hr />
    {{~["Bottom"] :position}}
        {{#def.createAction}}
    {{~}}
{{?}}
<hr />
{{#def.navbar}}
<a id="bottom"></a>
{{? it.customFooter}}
    {{#def.customFooter}}
{{?}}
</body>
</html>
