<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
{{#def.head}}
<body class="{{=it.deviceType}}"
      {{#def.baseData}}>
{{? it.customHeader}}
    {{#def.customHeader}}
{{?}}
<div class="theTitle">
    <h1>
        {{=it.title}}
    </h1>
</div>
{{? "ascetic" != it.settings.mode.name && it.site.vkontakte.integrationEnabled}}
    <style type="text/css">
        #vkontakteLoginButton {
            text-align: center;
            margin-top: 8px;
        }

        #vkontakteLoginButton > table {
            margin-left: auto;
            margin-right: auto;
        }
    </style>
    <script type="text/javascript">
        VK.init({ apiId: {{=it.site.vkontakte.appId}} });
    </script>
{{?}}
<div class="login">
    <form id="loginForm" method="post" accept-charset="utf-8" action="/{{=it.site.pathPrefix}}action/login"
          enctype="application/x-www-form-urlencoded" class="inlineForm"
          {{? it.settings.mode.name != "ascetic"}}onsubmit="lord.doLogin(event, this); return false;"{{?}}>
        <input type="hidden" name="source" value="{{=it.source}}" />
        <input type="password" class="input" name="hashpass" placeholder="{{=it.tr.loginPlaceholderText}}"
               size="{{? "mobile" == it.deviceType}}30{{??}}43{{?}}"
               autofocus="true" />
        <input type="submit" class="button" name="submit" value="{{=it.tr.loginText}}" />
    </form>
    {{? "ascetic" != it.settings.mode.name && it.site.vkontakte.integrationEnabled}}
        <div id="vkontakteLoginButton" onclick="lord.vkAuth();"></div>
    {{?}}
</div>
<div class="loginDescription">
    {{=it.tr.loginSystemDescriptionText}}
</div>
{{? it.customFooter}}
    {{#def.customFooter}}
{{?}}
</body>
</html>
