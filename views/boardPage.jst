<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
{{#def.head}}
<body class="{{=it.deviceType}}"
      {{#def.baseData}}
      data-last-post-number="{{=it.lastPostNumber}}"
      data-current-page="{{=it.currentPage}}">
{{? it.site.vkontakte.integrationEnabled }}
    <script type="text/javascript">
        VK.init({ apiId: {{=it.site.vkontakte.appId}} });
    </script>
{{?}}
<div id="hiddenPostForm" style="display: none;">
    {{#def.postForm}}
</div>
{{? it.board.captchaEnabled}}
    <div id="hiddenCaptcha" style="display: none;">
        {{? it.user.captchaQuota > 0}}
            {{ out += it.captchaEngine.widgetHtml(it.req, it.captchaPrepared); }}
        {{?}}
    </div>
{{?}}
{{? it.customHeader}}
    {{#def.customHeader}}
{{?}}
{{~["top", "bottom"] :target}}
    {{#def.navigationButton}}
{{~}}
{{~["previous", "next"] :target}}
    {{#def.leafButton}}
{{~}}
{{#def.toolbar}}
<br />
<a id="top"></a>
{{#def.searchAction}}
{{? it.board.bannerFileName}}
    <br />
    {{#def.banner}}
{{?}}
<div class="theTitle">
    <h1>
        {{=it.board.title}}
        <a href="/{{=it.site.pathPrefix}}{{=it.board.name}}/catalog.html" class="buttonImage"
           title="{{=it.tr.boardCatalogLinkText}}"><img src="/{{=it.site.pathPrefix}}img/catalog.png"
                                                        width="24" height="24"></a>
        <a href="/{{=it.site.pathPrefix}}{{=it.board.name}}/rss.xml" target="_blank" class="buttonImage"
           title="{{=it.tr.boardRssLinkText}}"><img src="/{{=it.site.pathPrefix}}img/rss.png"
                                                    width="24" height="24"></a>
    </h1>
</div>
{{? it.board.postingEnabled}}
    <hr />
    {{~["Top"] :position}}
        {{#def.createAction}}
    {{~}}
{{??}}
    <div class="postingDisabledMessage">
        <h2>{{=it.tr.postingDisabledBoardText}}</h2>
    </div>
{{?}}
<div id="threads" class="loadingMessage">
    <img src="/{{=it.site.pathPrefix}}img/loading_big.gif">
    <h1 style="display: inline;">{{=it.tr.loadingThreadsMessage}}</h1>
</div>
{{? it.board.postingEnabled}}
<hr />
{{~["Bottom"] :position}}
    {{#def.createAction}}
{{~}}
{{?}}
<hr />
<div class="pages">
    {{? it.currentPage > 0}}
        <span class="pagesItem metaPage">
            {{? it.currentPage == 1}}
                [<a href="/{{=it.site.pathPrefix}}{{=it.board.name}}">{{=it.tr.toPreviousPageText}}</a>]
            {{??}}
                [<a href="/{{=it.site.pathPrefix}}{{=it.board.name}}/{{out += (it.currentPage - 1);}}.html">{{=it.tr.toPreviousPageText}}</a>] 
            {{?}}
        </span>
    {{?}}
    {{ for (var i = 0; i < it.pageCount; ++i) { }}
        {{? i != it.currentPage}}
            <span class="pagesItem">
                [<a href="/{{=it.site.pathPrefix}}{{=it.board.name}}{{? i > 0}}/{{=i}}.html{{?}}">{{=i}}</a>]
                </span>
        {{??}}
            <span class="pagesItem currentPage">
                [<b>{{=i}}</b>]
            </span>
        {{?}}
    {{ } }}
    {{? it.currentPage < (it.pageCount - 1)}}
        <span class="pagesItem metaPage">
            [<a href="/{{=it.site.pathPrefix}}{{=it.board.name}}/{{out += (it.currentPage + 1);}}.html">{{=it.tr.toNextPageText}}</a>]
        </span>
    {{?}}
</div>
{{? !it.settings.stickyToolbar}}
    <hr />
    {{#def.navbar}}
{{?}}
<hr />
<div class="postingSpeedBar">
    <span class="navbarItem">[{{=it.tr.postingSpeedText}} {{=it.board.postingSpeed}}]</span>
</div>
<a id="bottom"></a>
{{? it.customFooter}}
    {{#def.customFooter}}
{{?}}
{{#def.extraData}}
</body>
</html>
